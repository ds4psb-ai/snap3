// /schemas/vdp-universal-v3.schema.json
{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "VDP Universal Schema v3.0",
  "type": "object",
  "required": ["content_id", "content_key", "platform", "metadata", "processing_metadata"],
